{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "alwaysStrict": true,
    "baseUrl": "./packages",
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": [
      "ES2015",
      "es2019"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2019",
    "paths": {
      "@usds.gov/questionable": [
        "questionable"
      ],
      "@usds.gov/questionable-core": [
        "core"
      ],
      "@usds.gov/ssa-eligibility": [
        "ssa-eligibility"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "src/stories",
    "**/*.stories.ts",
    "**/*.css",
    "**/*.test.ts"
  ],
  "include": [
    "types.d.ts",
    "src"
  ],
}
